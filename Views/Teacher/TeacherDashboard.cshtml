@model ApplicationUser


<div class="cover2">
  <div id="landingHeader">
    <img id="headerLogo" src="../img/rockPencil.png">
    <span id="headerTitle">Sight Words Rock</span>
    <span>
    <form id="headerRightAlign" style="display: inline-block" method="post" asp-action="logout" asp-controller="Teacher">
        <span>
          <button type="submit" class="btn btn-info btn-md">Sign Out</button>
        </span>
    </form>
    </span>
  </div>
  <div id="headerTitle" class="text-center">
    <h1>Teacher Dashboard</h1>
    <span class="teal shadowWhite"><h2>Welcome, @Model.FirstName @Model.LastName </h2></span>
  </div>   
  <div style="padding: 20px 20px 20px 20px;">
  <div class="row" style="color:white">
      <div class="col-xs-12 col-md-6 text-center mb-2">
        <a role="button" class="btn btn-info btn-lg btn-block" asp-controller="Teacher" asp-action="ManageAccount" asp-route-id="@Model.Id"> 
          <span>
            <i class="fas fa-user-circle fa-5x"></i>
          </span>
          <br>
          Manage Account 
        </a>
      </div>
    <div class="col-xs-12 col-md-6 text-center">
      <a role="button" class="btn btn-info btn-lg btn-block" asp-controller="Teacher" asp-action="StudentStats"> 
        <span>
          <i class="fas fa-list-alt fa-5x"></i>
        </span>
        <br>
        View Student Progress
      </a>
    </div>
  </div>
  <br>
  <br>
  <div class="row" style="color:white">
      <div class="col-xs-12 col-md-6 text-center mb-2">
        <a role="button" class="btn btn-info btn-lg btn-block" asp-controller="Teacher" asp-action="ViewClass" asp-route-id="@Model.Id"> 
          <span>
            <i class="fas fa-users fa-5x"></i>
          </span>
          <br>
          View Class 
        </a>
      </div>
    <div class="col-xs-12 col-md-6 text-center">
      <!--<a role="button" class="btn btn-info btn-lg btn-block" asp-controller="Teacher" asp-action="Modules" asp-route-id="@Model.Id"> -->
      <a role="button" class="btn btn-info btn-lg btn-block"> 
        <span>
          <i class="fas fa-table fa-5x"></i>
        </span>
        <br>
        Modules
      </a>
    </div>
  </div>
</div>
</div>
