@model StudentLoginVM

@{
    ViewData["Title"] = "Student Login";
}

<section class="cover1">
  <div id="landingHeader">
    <img id="headerLogo" src="../img/rock.png">
    <span id="headerTitle">Sight Words Rock</span>
    <a role="button" id="headerRightAlign" asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-info btn-md">
      Home Page
    </a>
  </div>
  <div id="cover-caption">
    <div class="container">
      <div class="row text-white">
        <div style="background: rgba(255,255,255, .1); box-shadow: 0px 16px 40px rgba(0,0,0,0.23); padding: 20px 20px 0px 20px; margin: 20px auto; max-width: 360px" class="col-md-6 offset-md-3 text-center">
          <span class="textShadowTeal"> 
            <h2>Welcome, Student!</h2>
            <h3>Please sign in:</h3><br>
          </span>
          <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
              <input asp-for="StudentId" class="form-control" placeholder="Student ID">
              <span asp-validation-for="StudentId" class="text-danger"></span>
            </div>
            <div class="form-group">
              <input asp-for="Password" class="form-control" placeholder="Password">
              <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
              <div class="checkbox">
                <label asp-for="RememberMe">
                  <input asp-for="RememberMe"/>
                  @Html.DisplayNameFor(m => m.RememberMe)
                </label>
              </div>
            </div>
            <!-- <input class="form-control form-control-lg" type="text" placeholder="Student Access Code">
            <br>
            <input class="form-control form-control-lg" type="text" placeholder="Student ID Number">
            <br> -->
            <button type="submit" class="btn btn-info btn-lg">Login</button>
            <br>
            <br>
            <span class="psw"><a asp-area="" asp-controller="Student" asp-action="ForgotPassword" style="color:white;">Forgot Password?</a></span>
            <br>
            <br>
            <a role="button" class="btn btn-info btn-lg" asp-area="" asp-controller="Student" asp-action="CreateAccount">
              Create Account
            </a> 
            <br>
            <br>
            <!-- <a role="button" class="btn btn-primary btn-lg" asp-area="" asp-controller="Student" asp-action="StudentDashboard">
              Student Dashboard
            </a>   -->
          </form>
        </div>  
      </div>
    </div>
  </div>
</section>