@model StudentLoginVM

@{
    ViewData["Title"] = "Student Login";
}

<section class="cover1">
  <div id="landingHeader">
    <img id="headerLogo" src="../img/rock.png">
    <span id="headerTitle">Sight Words Rock</span>
    <a role="button" id="headerRightAlign" asp-area="" asp-controller="Student" asp-action="StudentLogin" class="btn btn-info btn-md">
      Student Login
    </a>
  </div>
  <div id="cover-caption">
    <div id="container" class="container">
      <div style="background: rgba(255,255,255, .1); box-shadow: 0px 16px 40px rgba(0,0,0,0.23); padding: 20px 20px; margin: 7vh auto; max-width: 430px" class="col-md-6 offset-md-3 text-center">
        <span class="textShadowTeal1">
          <h3>Sight Words Learning Center</h1>
          <h3>Password Reset Form</h3>
        </span>
        <br/>
        
        <div class="col-md-12">
          <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <p>Forgot your password? Enter your Student I.D. below, and we will send instructions to your parent on setting up a new password.</p>
              <br/>
              <div style="text-align:left;">
                <div class="form-group">
                  <label style="text-align:right;" class="col-form-label form-control-label">Student ID:</label>
                  <div>
                    <input asp-for="StudentId" class="form-control form-control-lg" placeholder="Enter Student ID Here">
                    <span asp-validation-for="StudentId" class="text-danger"></span>
                  </div>
                </div>
              </div>
          </form>
          <a asp-controller="" asp-action="">
                <button type="submit" class="btn btn-info btn-lg">Reset My Password</button>
          </a>
        </div>
      </div>
    </div>
    <br/>
  </div>
</section>