<script>
var url = $(location).attr('href');
var indexGame = url.charAt(url.length -1);

const cover = document.querySelector(".cover1 ");

// sets stage image
window.onload = function setBackground(){
  if (indexGame >= 1 && indexGame < 4) {
    document.getElementById("gameImage").innerHTML = "<img class=\"card-img-top\" src=\"/img/morning.png\" alt=\"Card image cap\">"
  } else if (indexGame >= 4 && indexGame < 7){
    document.getElementById("gameImage").innerHTML = "<img class=\"card-img-top\" src=\"/img/evening.png\" alt=\"Card image cap\">"
  } else {
    document.getElementById("gameImage").innerHTML = "<img class=\"card-img-top\" src=\"/img/night.png\" alt=\"Card image cap\">"
  }
  // to eliminate flash of unstyled content
  cover.style.visibility='visible';
}
</script>