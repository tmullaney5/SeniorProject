@model CreateStudentAccountVM

<section class="cover1HeightAuto">
  <div id="landingHeader">
    <img id="headerLogo" src="../img/rock.png">
    <span id="headerTitle">Sight Words Rock</span>
    <a role="button" id="headerRightAlign" asp-area="" asp-controller="Student" asp-action="StudentLogin" class="btn btn-info btn-md">
      Student Login
    </a>
  </div>
  <div id="cover-caption">
    <div id="container" class="container">
      <div style="background: rgba(255,255,255, .1); box-shadow: 0px 16px 40px rgba(0,0,0,0.23); padding: 20px 20px; margin: 7vh auto; max-width: 450px" class="col-md-6 offset-md-3 text-center">
        <span class="textShadowTeal">
          <h3>Sight Words Learning Center</h1>
          <h3>Create an Account</h3>
        </span>
        <br/>
        
        <div class="col-md-12">
          <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
              <div style="text-align:left;">
                <div class="form-group row">
                  <label style="text-align:right;" class="col-sm-4 col-form-label form-control-label">Parent's First Name</label>
                  <div class="col-sm-8">
                    <input asp-for="ParentFirst" class="form-control form-control-lg" placeholder="Parent's first name">
                    <span asp-validation-for="ParentFirst" class="text-danger"></span>
                  </div>
                </div>
                <div class="form-group row">
                  <label style="text-align:right;" class="col-sm-4 col-form-label form-control-label">Parent's Last Name</label>
                  <div class="col-sm-8">
                    <input asp-for="ParentLast" class="form-control form-control-lg" placeholder="Parent's last name">
                    <span asp-validation-for="ParentLast" class="text-danger"></span>
                  </div>
                </div>
                <div class="form-group row">
                  <label style="text-align:right;" class="col-sm-4 col-form-label form-control-label">Access Code</label>
                  <div class="col-sm-8">
                    <input asp-for="AccessCode" class="form-control form-control-lg" placeholder="Access code">
                    <span asp-validation-for="AccessCode" class="text-danger"></span>
                  </div>
                </div>
                <div class="form-group row">
                  <label style="text-align:right;" class="col-sm-4 col-form-label form-control-label">Student ID</label>
                  <div class="col-sm-8">
                    <input asp-for="StudentId" class="form-control form-control-lg" placeholder="Student ID">
                    <span asp-validation-for="StudentId" class="text-danger"></span>
                  </div>
                </div>
                <div class="form-group row">
                  <label style="text-align:right;" class="col-sm-4 col-form-label form-control-label">Parent Email Address</label>
                  <div class="col-sm-8">
                    <input asp-for="Email" class="form-control form-control-lg" placeholder="Email">
                    <span asp-validation-for="Email" class="text-danger"></span>
                  </div>
                </div>
                <div class="form-group row">
                  <label style="text-align:right;" class="col-sm-4 col-form-label form-control-label">Password</label>
                  <div class="col-sm-8">
                    <input asp-for="Password" class="form-control form-control-lg" placeholder="Password">
                    <span asp-validation-for="Password" class="text-danger"></span>
                  </div>
                </div>
                <div class="form-group row">
                  <label style="text-align:right;" class="col-sm-4 col-form-label form-control-label">Confirm Password</label>
                  <div class="col-sm-8">
                    <input asp-for="ConfirmPassword" class="form-control form-control-lg" placeholder="Confirm Password">
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
              </div>
              <a asp-controller="" asp-action="">
                <button type="submit" class="btn btn-info btn-lg">Register</button>
              </a>
          </form>
        </div>
      </div>
    </div>
    <br/>
  </div>
</section>

